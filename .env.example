# Database configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=data_warehouse

# Kafka configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=dw_

# API configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5

# Rate limiting
REQUEST_DELAY=0.5
MAX_CONCURRENT_REQUESTS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=86400

# Airflow settings
AIRFLOW_HOME=/opt/airflow
AIRFLOW_DAGS_FOLDER=/opt/airflow/dags
